<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trade Brain"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#3c0cda"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/tname1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Name"
        android:textAlignment="gravity"
        android:textColorHint="#123456"
        android:textSize="25sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtbrokerage"
        android:layout_marginTop="120dp"
        android:hint="Brokerage Charges"
        android:textColorHint="#123456"
        android:textSize="25sp"
        android:textAlignment="gravity"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtintraday"
        android:layout_marginTop="190dp"
        android:hint="Intraday Charges"
        android:textColorHint="#123456"
        android:textSize="25sp"
        android:textAlignment="gravity"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtaccount"
        android:layout_marginTop="260dp"
        android:hint="Account Opening Charge"
        android:textColorHint="#123456"
        android:textSize="25sp"
        android:textAlignment="gravity"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtannual"
        android:layout_marginTop="320dp"
        android:hint="Annual Maintenance Charge"
        android:textColorHint="#123456"
        android:textSize="25sp"
        android:textAlignment="gravity"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/btnsubmit"
        android:text="Submit"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#123456"
        android:background="#9f5269"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnsearch"
            android:text="Search"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="210dp"
            android:textSize="25sp"
            android:textColor="#123456"
            android:textStyle="bold"
            android:background="#9f5269"/>

    </LinearLayout>

</RelativeLayout>